<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetailActivity">



    <LinearLayout
        android:id="@+id/glass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/underrock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기준 : 언더락(300mL)"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_below="@+id/glass"
        android:id="@+id/tv_Rkffndk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="잭다니엘과 콜라를 섞어 마시는 간단한 칵테일 국내에서 제일 많이 팔리는 칵테일 중 하나 아예 RTD 제품으로 판매 될 정도입니다."
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <!--    -->


    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/iv_RKffndk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Rkffndk">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/jack"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잭다니엘 1oz"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>


    </LinearLayout>

    <!--    -->


    <LinearLayout
        android:id="@+id/vmffjtm"
        android:layout_below="@id/iv_RKffndk"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_RKffndk"
            android:layout_marginLeft="90dp"
            android:text="+"
            android:textSize="40dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/dndb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vmffjtm">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/coke"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="콜라 나머지 가득"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>


    </LinearLayout>


    <!--    -->



</RelativeLayout>




