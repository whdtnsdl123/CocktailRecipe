<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetailActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/glass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:src="@drawable/underrock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기준 : 언더락(300mL)"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_fkdlwm"
                android:layout_below="@+id/glass"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="라운지 바를 가면 제일 먼저 찾게 되는 술 레몬 맛이 강해 술이 잘 느껴지지 않습니다 컵 주위에 레몬을 묻혀 주위에 설탕을 둘러도 좋아요!"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <!--    -->


            <LinearLayout
                android:id="@+id/iv_RKffndk"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_fkdlwm">


                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/vodka"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보드카 1 oz"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>


            </LinearLayout>

            <!--    -->


            <LinearLayout
                android:id="@+id/vmffjtm"
                android:layout_below="@id/iv_RKffndk"
                android:layout_width="200dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_RKffndk"
                    android:layout_marginLeft="90dp"
                    android:text="+"
                    android:textSize="40dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/dndb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vmffjtm">

                <ImageView
                    android:id="@+id/rmfpskels"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/sourmix" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="샤워믹스 1oz"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>


            </LinearLayout>


            <!--    -->


            <LinearLayout
                android:id="@+id/plus"
                android:layout_below="@+id/dndb"
                android:layout_width="200dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_RKffndk"
                    android:layout_marginLeft="90dp"
                    android:text="+"
                    android:textSize="40dp" />



            </LinearLayout>








            <LinearLayout
                android:id="@+id/sdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/plus">

                <ImageView
                    android:id="@+id/sss"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/sprite"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사이다 채우기"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>








            </LinearLayout>

        </RelativeLayout>





    </ScrollView>






</RelativeLayout>