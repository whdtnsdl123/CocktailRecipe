<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetailActivity">



    <LinearLayout
        android:id="@+id/glass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/underrock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기준 : 언더락(300mL)"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_below="@+id/glass"
        android:paddingTop="40dp"
        android:id="@+id/tv_Rkffndk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="우유에 커피 리큐르 깔루아를 섞은 것으로 달콤하고 부드러우며 도수는 맥주와 비슷한 정도 입니다. 우유를 어느정도 넣어주느냐에 따라서 도수가 달라지겠죠~?"
        android:textStyle="bold"
        android:textSize="20sp"/>

<!--    -->


    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/iv_RKffndk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Rkffndk">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/kahlua"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="깔루아 1온스"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>


    </LinearLayout>

<!--    -->


    <LinearLayout
        android:id="@+id/vmffjtm"
        android:layout_below="@id/iv_RKffndk"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_RKffndk"
            android:layout_marginLeft="90dp"
            android:text="+"
            android:textSize="40dp" />


        </LinearLayout>


    <LinearLayout
        android:id="@+id/dndb"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vmffjtm">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/dndb"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우유 나머지 가득"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>


    </LinearLayout>


<!--    -->




</RelativeLayout>