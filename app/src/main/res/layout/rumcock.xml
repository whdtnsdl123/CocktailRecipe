<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">



        <LinearLayout
            android:id="@+id/glass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/underrock"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기준 : 언더락(300mL)"
                android:layout_gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_fkdlwm"
            android:layout_below="@+id/glass"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="럼을 베이스로 하는 칵테일입니다 럼과 콜라만 있다면 집에서도 손쉽게 조제 가능한 음료입니다 탄산음료에 의해서 알콜이 희석되어 도수가 크게 낮아집니다. "
            android:textStyle="bold"
            android:textSize="20sp"/>

        <!--    -->


        <LinearLayout
            android:id="@+id/iv_RKffndk"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fkdlwm">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:src="@drawable/vodkarum"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  럼 1 oz"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>


        </LinearLayout>

        <!--    -->


        <LinearLayout
            android:id="@+id/vmffjtm"
            android:layout_below="@id/iv_RKffndk"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_RKffndk"
                android:layout_marginLeft="90dp"
                android:text="+"
                android:textSize="40dp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/dndb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vmffjtm">

            <ImageView
                android:id="@+id/rmfpskels"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/coke" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="콜라 채우기"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>





        </LinearLayout>




</RelativeLayout>